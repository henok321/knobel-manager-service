{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "prCreation": "immediate",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "matchDatasources": ["golang-version","gomod"],
      "enabled": true,
      "postUpdateOptions": ["gomodTidy"]
    }
  ]
}
