{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "automerge": true
    }
  ],
  "prCreation": "immediate",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ]
}
