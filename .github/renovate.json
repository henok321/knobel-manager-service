{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "docker-compose"
  ],
  "automerge": true,
  "requiredStatusChecks": [
    "ci-check-name"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "automerge": true
    }
  ],
  "prCreation": "immediate",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ]
}
